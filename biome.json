{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "formatter": {
    "enabled": true,
    "ignore": ["node_modules"],
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["node_modules"],
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error",
        "useHookAtTopLevel": "error",
        "noUnusedImports": "warn"
      },
      "style": {
        "noNegationElse": "error",
        "useBlockStatements": "error"
      }
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
